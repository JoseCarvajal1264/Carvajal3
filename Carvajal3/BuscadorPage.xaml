<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carvajal3.Views.BuscadorPage"
             Title="Buscar País">
    <StackLayout Padding="20">
        <Entry x:Name="searchEntry" Placeholder="Ingresa el nombre del país" />

        <Button Text="Buscar" Clicked="OnBuscarClicked" />
        <Button Text="Limpiar" Clicked="OnLimpiarClicked" />

        <Label x:Name="resultLabel" Text="" TextColor="Black" />
    </StackLayout>
</ContentPage>
